							</tab>
							<tab id="sp_pagetypes_bp_profiles" title="Profiles">
								<accordion id="sp_pagetypes_bp_profiles">
									<section title="Profile" id="sp_pagetypes_bp_profiles_profile">
										
									</section>
									<section title="Profile Blogs" id="sp_pagetypes_bp_profiles_profileblogs">
										
									</section>
									<section title="Profile Groups" id="sp_pagetypes_bp_profiles_profilegroups">
										
									</section>
								</accordion>
							</tab>
							<tab id="sp_pagetypes_bp_groups" title="Groups">
								<accordion id="sp_pagetypes_bp_groups">
									<section title="Group Directory" id="sp_pagetypes_bp_groups_groupdirectory">
										
									</section>
									<section title="Group Home" id="sp_pagetypes_bp_profiles_grouphome">
										
									</section>
									<section title="Group Forum" id="sp_pagetypes_bp_profiles_groupforum">
										
									</section>
									<section title="Group Forum Topic" id="sp_pagetypes_bp_profiles_groupforumtopic">
										
									</section>
									<section title="Group Members" id="sp_pagetypes_bp_profiles_groupmembers">
										
									</section>
								</accordion>
							</tab>
							<tab id="sp_pagetypes_bp_forums" title="Forums">
								<accordion id="sp_pagetypes_bp_forums">
									<section title="Forums Directory" id="sp_pagetypes_bp_groups_forumsdirectory">
										
									</section>
								</accordion>
							</tab>
							<tab id="sp_pagetypes_bp_blogs" title="Blogs">
								<accordion id="sp_pagetypes_bp_blogs">
									<section title="Blogs Directory" id="sp_pagetypes_bp_blogs_blogsdirectory">
										
									</section>
								</accordion>
							</tab>
							<tab id="sp_pagetypes_bp_registration" title="Registration">
								<accordion id="sp_pagetypes_bp_registration">
