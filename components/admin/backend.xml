<?xml version="1.0" ?>
<wml>
	<menu title="SeoPress" icon="../wp-content/plugins/seopress/includes/images/icon-seopress-16x16.png" slug="sp_seo">
		<page title="Page types" headline="Page types" slug="sp_seo" icon="../wp-admin/images/icons32.png">
			<p>Optimize your Wordpress pages.</p>
			
			<form name="sp_seo_settings">
				<tabs id="sp_page_types">
					<tab id="sp_page_types_wordpress" title="Wordpress">
						
						<div class="sp-tab-head">
							<div class="logo"><img src="../wp-content/plugins/seopress/includes/images/logo-wordpress.png" /></div>
							<h3>Wordpress Blog</h3>
							<p>Setup your title and meta tags of your Wordpress blog.</p>
						</div>
						
						<accordion id="sp_pagetypes_wordpress_accordion">
							<section title="Home" id="wp-home">
							</section>
							<section title="Posts" id="wp-posts">
							</section>
							<section title="Pages" id="wp-pages">
							</section>
							<section title="Archive" id="wp-archive">
							</section>
							<section title="Category" id="wp-category">
							</section>
							<section title="Tags" id="wp-tags">
							</section>
							<section title="Author" id="wp-author">
							</section>
							<section title="Search result" id="wp-search">
							</section>
						</accordion>
						
						<button name="Save" />
						
					</tab>
					
					<tab id="sp_pagetypes_network" title="Wordpress Network">
						<div class="sp-tab-head">
							<div class="logo"><img src="../wp-content/plugins/seopress/includes/images/logo-wordpress.png" /></div>
							<h3>Wordpress Network Blogs</h3>
							<p>Setup your title and meta tags of your Wordpress main blog.</p>
						</div>
					
						<accordion id="sp_pagetypes_network_accordion">
							<section title="Home" id="network-home">
							</section>
							<section title="Posts" id="network-posts">
							</section>
							<section title="Pages" id="network-pages">
							</section>
							<section title="Archive" id="network-archive">
							</section>
							<section title="Category" id="network-category">
							</section>
							<section title="Tags" id="network-tags">
							</section>
							<section title="Author" id="network-author">
							</section>
							<section title="Search result" id="network-search">
							</section>
						</accordion>
						
						<button name="Save" />
						
					</tab>
					
					<tab id="sp_pagetypes_buddypress" title="Buddypress">
						
						<div class="sp-tab-head">
							<div class="logo"><img src="../wp-content/plugins/seopress/includes/images/logo-buddypress.png" /></div>
							<h3>Buddypress</h3>
							<p>Setup your title and meta tags of the buddypress pages.</p>
						</div>
						
						<h3>Setup Buddypress pages</h3>
						
						<tabs>
							<tab id="seopress_pagetypes_bp_members" title="Members">
								<accordion id="seopress_pagetypes_bp_members">
									<section title="Members Directory" id="sp_pagetypes_buddypress_members-membersdirectory">
										
